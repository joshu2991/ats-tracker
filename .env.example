# ============================================================================
# Application Configuration
# ============================================================================

# Application name (used in notifications, emails, etc.)
APP_NAME=Laravel

# Application environment (local, staging, production)
APP_ENV=local

# Application encryption key (generate with: php artisan key:generate)
# REQUIRED: Must be set after copying this file
APP_KEY=

# Application debug mode (true for development, false for production)
# WARNING: Never set to true in production!
APP_DEBUG=true

# Application URL (used for generating absolute URLs)
APP_URL=http://localhost

# ============================================================================
# Localization
# ============================================================================

# Default application locale
APP_LOCALE=en

# Fallback locale when translation is missing
APP_FALLBACK_LOCALE=en

# Faker locale for generating test data
APP_FAKER_LOCALE=en_US

# ============================================================================
# Maintenance Mode
# ============================================================================

# Maintenance mode driver (file or database)
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# ============================================================================
# PHP Configuration
# ============================================================================

# Number of workers for PHP built-in server (development only)
PHP_CLI_SERVER_WORKERS=4

# Bcrypt hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================================================
# Logging
# ============================================================================

# Log channel (stack, single, daily, etc.)
LOG_CHANNEL=stack

# Log stack configuration
LOG_STACK=single

# Deprecations log channel
LOG_DEPRECATIONS_CHANNEL=null

# Log level (debug, info, notice, warning, error, critical, alert, emergency)
LOG_LEVEL=debug

# ============================================================================
# Database Configuration
# ============================================================================

# Database connection type (mysql, sqlite, pgsql, etc.)
DB_CONNECTION=mysql

# Database host
DB_HOST=127.0.0.1

# Database port
DB_PORT=3306

# Database name
DB_DATABASE=laravel

# Database username
DB_USERNAME=root

# Database password
DB_PASSWORD=

# ============================================================================
# Session Configuration
# ============================================================================

# Session driver (file, database, redis, etc.)
SESSION_DRIVER=database

# Session lifetime in minutes
SESSION_LIFETIME=120

# Encrypt session data
SESSION_ENCRYPT=false

# Session path (for cookie driver)
SESSION_PATH=/

# Session domain (null uses APP_URL domain)
SESSION_DOMAIN=null

# ============================================================================
# Broadcasting & Queue
# ============================================================================

# Broadcasting connection (log, redis, pusher, etc.)
BROADCAST_CONNECTION=log

# Filesystem disk (local, s3, etc.)
FILESYSTEM_DISK=local

# Queue connection (sync, database, redis, etc.)
QUEUE_CONNECTION=database

# ============================================================================
# Cache Configuration
# ============================================================================

# Cache store (file, database, redis, etc.)
CACHE_STORE=database

# Cache prefix (optional)
# CACHE_PREFIX=

# ============================================================================
# Memcached Configuration
# ============================================================================

# Memcached host (if using memcached cache driver)
MEMCACHED_HOST=127.0.0.1

# ============================================================================
# Redis Configuration
# ============================================================================

# Redis client (phpredis or predis)
REDIS_CLIENT=phpredis

# Redis host
REDIS_HOST=127.0.0.1

# Redis password (null if no password)
REDIS_PASSWORD=null

# Redis port
REDIS_PORT=6379

# ============================================================================
# Mail Configuration
# ============================================================================

# Mail driver (ses, smtp, log, etc.)
# For AWS SES, use 'ses' and configure AWS credentials below
MAIL_MAILER=ses

# Mail scheme (for SMTP)
MAIL_SCHEME=null

# Mail host (for SMTP, use AWS SES SMTP endpoint)
MAIL_HOST=127.0.0.1

# Mail port (for SMTP, AWS SES uses 587 for TLS)
MAIL_PORT=587

# Mail username (for SMTP)
MAIL_USERNAME=null

# Mail password (for SMTP)
MAIL_PASSWORD=null

# Mail from address (sender email)
MAIL_FROM_ADDRESS="hello@example.com"

# Mail from name (sender name, uses APP_NAME if not set)
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# AWS Configuration
# ============================================================================

# AWS Access Key ID (for SES, S3, etc.)
# REQUIRED for email notifications via SES
AWS_ACCESS_KEY_ID=

# AWS Secret Access Key
# REQUIRED for email notifications via SES
AWS_SECRET_ACCESS_KEY=

# AWS default region (us-east-1, us-west-2, etc.)
AWS_DEFAULT_REGION=us-east-1

# AWS S3 bucket name (optional, if using S3 storage)
AWS_BUCKET=

# Use path-style endpoint for S3 (false for virtual-hosted style)
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# Frontend Configuration
# ============================================================================

# Vite application name (used in frontend builds)
VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# OpenAI Configuration
# ============================================================================

# OpenAI API key (required, for AI-powered resume analysis)
# If not set, application will use rule-based analysis only
OPENAI_API_KEY=

# ============================================================================
# Application-Specific Configuration
# ============================================================================

# ATS analysis timeout in seconds (default: 30)
ATS_ANALYSIS_TIMEOUT=30

# Maximum file size in bytes for resume uploads (default: 5242880 = 5MB)
ATS_MAX_FILE_SIZE=5242880

# Google Analytics tracking ID (optional, for analytics)
# Format: G-XXXXXXXXXX or UA-XXXXXXXXX-X
GOOGLE_ANALYTICS_ID=

# GitHub repository URL (used in footer and error pages)
GITHUB_URL=https://github.com/your-github-username

# ============================================================================
# SEO Configuration (Optional)
# ============================================================================

# SEO site name (defaults to APP_NAME if not set)
SEO_SITE_NAME=

# SEO site URL (defaults to APP_URL if not set)
SEO_SITE_URL=

# Default author for meta tags (optional)
SEO_DEFAULT_AUTHOR=

# LinkedIn profile URL (for social sharing)
SEO_LINKEDIN_URL=https://www.linkedin.com/in/your-username

# Open Graph image path (defaults to /images/og-default.png)
SEO_OG_IMAGE_PATH=/images/og-default.png

# Open Graph locale (defaults to en_US)
SEO_OG_LOCALE=en_US

# Twitter site handle (optional, e.g., @username)
SEO_TWITTER_SITE=

# Twitter creator handle (optional, e.g., @username)
SEO_TWITTER_CREATOR=

# Organization logo path for structured data (optional)
SEO_ORG_LOGO=

# Enable sitemap generation (defaults to true)
SEO_SITEMAP_ENABLED=true
